{
  "name": "shmup-yours-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "test"
  ],
  "type": "module",
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "@eslint/js": "^9.5.0",
    "eslint": "^8.57.1",
    "lint-staged": "^15.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "lint:all": "yarn workspaces run lint",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --cache",
      "git add"
    ]
  }
}
